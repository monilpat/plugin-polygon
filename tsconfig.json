{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["src", "."],
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "types": ["vitest/globals", "node", "vitest"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": false,
    "moduleDetection": "force",
    "allowArbitraryExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["../core/src"],
      "@elizaos/core/*": ["../core/src/*"],
      "~/vitest.setup": ["./vitest.setup.ts"]
    },
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "vitest.setup.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "dist",
    "node_modules"
  ]
}